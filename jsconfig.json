{
    "extends": "./.svelte-kit/tsconfig.json",
    "compilerOptions": {
        "target": "es6",
        "module": "es2020",
        "baseUrl": ".",
        "paths": {
            "$app/*": [
                ".svelte-kit/dev/runtime/app/*",
                ".svelte-kit/build/runtime/app/*"
            ],
            "$lib":[
                "src/lib"
            ],
            "$lib/*": [
                "src/lib/*"
            ],
            "$utils/*": [
                "src/utils/*"
            ],
            "$pkg": [
                "package.json"
            ],
            "$images": [
                "src/statics/images/*"
            ],
            "$locales/*": [
                "locales/*"
            ]
        }
    },
    "include": [
        "src/**/*.js",
        "src/**/*.svelte"
    ]
}
