{
	"compilerOptions": {
		"target": "es6",
		"module": "es6",
		"baseUrl": ".",
		"paths": {
			"$app/*": [".svelte/dev/runtime/app/*", ".svelte/build/runtime/app/*"],
			"$lib/*": ["src/lib/*"],
			"$utils/*": ["src/utils/*"],
			"$pkg": ["package.json"],
			"$imgs": ["src/statics/images/manifest.json"],
			"$locales/*": ["locales/*"]
		}
	},
	"include": ["src/**/*.js", "src/**/*.svelte"]
}
